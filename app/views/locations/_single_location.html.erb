<div class="location">
  <h3><%= location.name %></h3>
  <h4>City: <%= location.city %></h4>
  <%= location.description %><br />
  <%= link_to image_tag(location.image, class: "location"), location_path(location) %>
</div>


<h1>New Location</h1>

<%= link_to 'Show all locations', locations_path %>

<%= form_for location do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
